<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quartos">

    <Button
        android:id="@+id/button_Reservar2"
        android:layout_width="91dp"
        android:layout_height="53dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#FFEB3B"
        android:text="Reservar"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="545dp" />

    <Button
        android:id="@+id/button_Varanda"
        android:layout_width="91dp"
        android:layout_height="49dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#FFEB3B"
        android:text="Reservar"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservar_Deluxe" />

    <TextView
        android:id="@+id/Reservar_Deluxe"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_marginEnd="8dp"
        android:text="Pague em até 3x de R$ 625,50 ou Á vista R$ 1538.41"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="470dp" />

    <TextView
        android:id="@+id/reservar_Deluxe"
        android:layout_width="91dp"
        android:layout_height="58dp"
        android:layout_marginEnd="4dp"
        android:text="Pague em até 3x de R$ 625,50 ou Á vista R$ 1538.41"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="609dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lavender"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:id="@+id/img_topo"
        android:layout_width="438dp"
        android:layout_height="162dp"
        app:srcCompat="@drawable/topo02"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="64dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="441dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/img_topo"
        app:srcCompat="@drawable/resumo_cliente"
        tools:layout_editor_absoluteX="1dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="345dp"
        android:layout_height="447dp"
        android:layout_marginBottom="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/quartos" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <TextView
        android:id="@+id/Reserva_Standard"
        android:layout_width="96dp"
        android:layout_height="51dp"
        android:text="@string/pague_em_at_3x_de_r_525_50_ou_vista_r_1438_41"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/button_Reservar"
        android:layout_width="91dp"
        android:layout_height="53dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#FFEB3B"
        android:text="Reservar"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="400dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="439dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/foot02"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>